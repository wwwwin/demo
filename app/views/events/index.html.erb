<h1>Events list</h1>
<table class="table">
  <% @events.each do |event| %>
    <tr>
      <td>
        <%= event.name %>
      </td>
      <td>
        <%= link_to "show",event_path(event), :class =>"btn btn-primary" %>

        <%= link_to 'attendees', event_attendees_path(event), :class => "btn btn-primary" %>

        <%= link_to " (XML)", event_path(event, :format => :xml), :class =>"btn btn-default" %>
        <%= link_to " (JSON)", event_path(event, :format => :json), :class =>"btn btn-default" %>
        <%= link_to 'edit', edit_event_path(event), :class =>"btn btn-default" %>
        <%= link_to 'delete', event_path(event), :method => :delete, :data => { :confirm => "Are you sure?" }, :class =>"btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to 'New event', new_event_path %> <br>
<%= link_to "Atom feed", events_path(:format => :atom) %> <br>
<%= paginate @events %>

