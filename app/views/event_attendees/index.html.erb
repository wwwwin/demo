<h1><%= @event.name %>Attendees List</h1>

<table class="table table-striped">
    <% @attendees.each do |attendee| %>
    <tr>
      <td>
      <%= attendee.name %>
      </td>
      <td>
      <%= link_to 'show', event_attendee_path(@event, attendee), :class => "btn btn-primary" %>
      </td>
      <td>
      <%= link_to 'edit', edit_event_attendee_path(@event, attendee), :class => "btn btn-primary" %>
      </td>
      <td>
      <%= link_to 'destroy', event_attendee_path(@event, attendee), :method => :delete, :data => { :confirm => "Are you sure?" }, :class =>"btn btn-danger" %>
      </td>
    </tr>
    <% end %>
</table>
<%= link_to 'new attendee', new_event_attendee_path(@event), :class => "btn btn-primary" %>
